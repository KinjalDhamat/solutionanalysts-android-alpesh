<resources>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/colorWindowBg</item>
    </style>

    <style name="NoTitleTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout" />

    <style name="TextInputHintAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/button_selector</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constrainedHeight">true</item>
        <item name="layout_constraintHeight_min">@dimen/_45sdp</item>
    </style>
</resources>